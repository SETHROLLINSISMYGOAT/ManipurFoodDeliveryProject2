<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="@color/app_background_color">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/header_location_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOCATION"
            android:textSize="12sp"
            android:textColor="#FB6D3A" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/header_location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Halal Lab office"
                android:textSize="16sp"
                android:textColor="@color/text_color_primary"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/header_dropdown_arrow"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_dropdown_arrow"
                android:layout_marginStart="8dp"
                android:contentDescription="Dropdown arrow" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/header_user_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_user_profile"
        android:background="@drawable/circle_background"
        android:contentDescription="User profile image" />
</LinearLayout>