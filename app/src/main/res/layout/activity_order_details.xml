<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".OrderDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/order_details_header_bar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/back_arrow_order_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="Back button" />

        <TextView
            android:id="@+id/order_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            app:layout_constraintStart_toEndOf="@id/back_arrow_order_details"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/order_details_header_bar"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_bar_order_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="16dp"
        android:clipToPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingTop="8dp">

            <!-- Online Status -->
            <LinearLayout
                android:id="@+id/online_status_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/circle_online_indicator" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Online"
                    android:textSize="14sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <TextView
                android:id="@+id/go_online_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go Online"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/tag_go_online"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/online_status_container"
                app:layout_constraintBottom_toBottomOf="@id/online_status_container"/>

            <!-- Active Order Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/active_order_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/online_status_container">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFC107"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/active_order_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active Order"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/active_order_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$32.50"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/active_order_label"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/active_order_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25 mins"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/active_order_amount"
                        app:layout_constraintBottom_toBottomOf="@id/active_order_amount" />

                    <TextView
                        android:id="@+id/active_order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#ORD-2025-001"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/active_order_amount"
                        android:layout_marginTop="8dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Customer Info Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/customer_info_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/active_order_card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/customer_profile_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_person"
                        android:background="@drawable/circle_background"
                        android:scaleType="centerCrop"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="Customer profile image" />

                    <TextView
                        android:id="@+id/customer_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Sarah Johnson"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toEndOf="@id/customer_profile_image"
                        app:layout_constraintTop_toTopOf="@id/customer_profile_image"
                        app:layout_constraintEnd_toStartOf="@id/call_customer_button" />

                    <TextView
                        android:id="@+id/customer_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="+1 (555) 123-4567"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toEndOf="@id/customer_profile_image"
                        app:layout_constraintTop_toBottomOf="@id/customer_name"
                        app:layout_constraintEnd_toStartOf="@id/call_customer_button" />

                    <ImageView
                        android:id="@+id/call_customer_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_call"
                        android:background="@drawable/circle_call_message_background"
                        android:padding="8dp"
                        app:tint="@color/fab_color"
                        app:layout_constraintEnd_toStartOf="@id/message_customer_button"
                        app:layout_constraintTop_toTopOf="@id/customer_profile_image"
                        app:layout_constraintBottom_toBottomOf="@id/customer_profile_image"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Call customer" />

                    <ImageView
                        android:id="@+id/message_customer_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_message"
                        android:background="@drawable/circle_call_message_background"
                        android:padding="8dp"
                        app:tint="@color/fab_color"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/customer_profile_image"
                        app:layout_constraintBottom_toBottomOf="@id/customer_profile_image"
                        android:contentDescription="Message customer" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Pickup and Delivery Locations Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/locations_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/customer_info_card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/pickup_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pickup"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/pickup_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_pickup_location"
                        app:tint="@color/fab_color"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/pickup_label"
                        android:layout_marginTop="4dp"
                        android:contentDescription="Pickup location icon" />

                    <TextView
                        android:id="@+id/pickup_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Pizza Palace, 123 Main St"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@id/pickup_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/pickup_icon"
                        app:layout_constraintBottom_toBottomOf="@id/pickup_icon" />

                    <View
                        android:id="@+id/location_divider"
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="#E0E0E0"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="@id/pickup_icon"
                        android:layout_marginStart="12dp"
                        app:layout_constraintTop_toBottomOf="@id/pickup_icon"
                        app:layout_constraintBottom_toTopOf="@id/delivery_icon"
                        app:layout_constraintVertical_bias="0.5" />

                    <TextView
                        android:id="@+id/delivery_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/pickup_icon" />

                    <ImageView
                        android:id="@+id/delivery_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_delivery_location"
                        app:tint="#4CAF50"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/delivery_label"
                        android:layout_marginTop="4dp"
                        android:contentDescription="Delivery location icon" />

                    <TextView
                        android:id="@+id/delivery_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="456 Oak Ave, Apt 2B"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@id/delivery_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/delivery_icon"
                        app:layout_constraintBottom_toBottomOf="@id/delivery_icon" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Order Item Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/order_item_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/locations_card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/order_item_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Item"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/order_item_details_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2x Margherita Pizza"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/order_item_label" />

                    <TextView
                        android:id="@+id/order_item_details_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1x Garlic Bread"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/order_item_details_1" />

                    <TextView
                        android:id="@+id/order_status_paid_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paid"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:background="@drawable/tag_paid"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/delivery_progress_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Progress"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/order_item_card" />

            <LinearLayout
                android:id="@+id/delivery_progress_status_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/delivery_progress_label">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle_green"
                    app:tint="#4CAF50"
                    android:contentDescription="Status icon" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="At Restaurant"
                    android:textSize="14sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#E0E0E0"
                app:layout_constraintStart_toStartOf="@id/delivery_progress_status_1"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toBottomOf="@id/delivery_progress_status_1" />

            <LinearLayout
                android:id="@+id/delivery_progress_status_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/delivery_progress_status_1">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle_green"
                    app:tint="#4CAF50"
                    android:contentDescription="Status icon" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Order Picked Up"
                    android:textSize="14sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#E0E0E0"
                app:layout_constraintStart_toStartOf="@id/delivery_progress_status_2"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toBottomOf="@id/delivery_progress_status_2" />

            <LinearLayout
                android:id="@+id/delivery_progress_status_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/delivery_progress_status_2">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle_green"
                    app:tint="#4CAF50"
                    android:contentDescription="Status icon" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Going to Customer"
                    android:textSize="14sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#E0E0E0"
                app:layout_constraintStart_toStartOf="@id/delivery_progress_status_3"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toBottomOf="@id/delivery_progress_status_3" />

            <LinearLayout
                android:id="@+id/delivery_progress_status_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/delivery_progress_status_3">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle_grey"
                    app:tint="#CCCCCC"
                    android:contentDescription="Status icon" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Delivered"
                    android:textSize="14sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <Button
                android:id="@+id/delivered_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Delivered"
                android:textColor="@android:color/white"
                android:backgroundTint="#6200EE"
                android:layout_marginTop="32dp"
                android:paddingVertical="16dp"
                app:cornerRadius="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/delivery_progress_status_4" />

            <LinearLayout
                android:id="@+id/action_buttons_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/delivered_button"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/report_issue_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Report Issue"
                    android:textColor="@color/fab_color"
                    android:drawableTop="@drawable/ic_report_issue"
                    android:drawableTint="@color/fab_color"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/fab_color"
                    android:paddingVertical="12dp"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="8dp" />

                <Button
                    android:id="@+id/rate_review_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rate and review"
                    android:textColor="@color/fab_color"
                    android:drawableTop="@drawable/ic_star"
                    android:drawableTint="@color/fab_color"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/fab_color"
                    android:paddingVertical="12dp"
                    android:layout_marginStart="8dp"
                    app:cornerRadius="8dp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_bar_order_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:menu="@menu/bottom_nav_menu_earnings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_order_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_white"
        app:backgroundTint="@color/fab_color"
        app:fabSize="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_bar_order_details"
        android:layout_marginBottom="16dp"
        android:contentDescription="Add new item" />

</androidx.constraintlayout.widget.ConstraintLayout>
